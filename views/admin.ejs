<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Painel do Administrador</title>
  <style>
    * { box-sizing: border-box; }
    body {
      margin: 0;
      font-family: Arial, Helvetica, sans-serif;
      background: linear-gradient(135deg, #020617, #0f172a);
      color: #e5e7eb;
      padding: 30px;
    }
    .container { max-width: 1200px; margin: auto; }
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
    }
    h1 { margin: 0; font-size: 26px; }
    .btn-add {
      background: #22c55e;
      color: #022c22;
      padding: 10px 16px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
      transition: background 0.3s;
    }
    .btn-add:hover { background: #16a34a; }
    .card {
      background: #020617;
      border-radius: 14px;
      padding: 20px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.4);
    }
    table { width: 100%; border-collapse: collapse; margin-top: 10px; }
    thead { background: #1e293b; }
    th { padding: 14px 10px; font-size: 14px; text-transform: uppercase; }
    td { padding: 12px 10px; border-bottom: 1px solid #1e293b; font-size: 14px; text-align: center; }
    .acoes { display: flex; justify-content: center; gap: 8px; }
    a, button {
      border: none; cursor: pointer; border-radius: 6px;
      padding: 7px 12px; font-size: 13px; color: #fff;
      transition: 0.2s;
    }
    .btn-edit { background: #3b82f6; text-decoration: none; }
    .btn-delete { background: #ef4444; }
    .btn-finish { background: #10b981; }
    button:hover { opacity: 0.8; transform: scale(1.05); }
    .empty { text-align: center; padding: 20px; color: #9ca3af; }
  </style>
</head>

<body>
  <div class="container">
    <div class="header">
      <h1>‚öôÔ∏è Painel do Administrador</h1>
      <a href="/admin/jogos/novo" class="btn-add">‚ûï Novo Jogo</a>
    </div>

    <div class="card">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Confronto</th>
            <th>Data</th>
            <th>Odds (C/E/F)</th>
            <th>A√ß√µes</th>
          </tr>
        </thead>
        <tbody>
          <% if (jogos.length === 0) { %>
            <tr>
              <td colspan="5" class="empty">Nenhum jogo cadastrado</td>
            </tr>
          <% } %>

          <% jogos.forEach(jogo => { %>
            <tr>
              <td><%= jogo.id %></td>
              <td><strong><%= jogo.time_casa %></strong> vs <strong><%= jogo.time_fora %></strong></td>
              <td><%= jogo.data_jogo %></td>
              <td><%= jogo.odd_casa %> | <%= jogo.odd_empate %> | <%= jogo.odd_fora %></td>
              <td>
                <div class="acoes">
                  <% if (jogo.status !== 'FINALIZADO') { %>
                    <button class="btn-finish" onclick="finalizarJogo('<%= jogo.id %>')">
                       üèÜ Finalizar
                    </button>
                  <% } else { %>
                    <span style="color: #64748b;">Encerrado</span>
                  <% } %>

                  <a href="/admin/jogos/editar/<%= jogo.id %>" class="btn-edit">‚úèÔ∏è Editar</a>
                  
                  <a href="/jogos/deletar/<%= jogo.id %>" class="btn-delete" onclick="return confirm('Excluir este jogo?')">üóëÔ∏è Excluir</a>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function finalizarJogo(id) {
    Swal.fire({
      title: 'Qual foi o resultado?',
      input: 'select',
      inputOptions: {
        'TIME_CASA': 'Time da Casa Venceu',
        'EMPATE': 'Empate',
        'TIME_FORA': 'Time de Fora Venceu'
      },
      inputPlaceholder: 'Selecione...',
      showCancelButton: true,
      confirmButtonText: 'Confirmar e Pagar',
      confirmButtonColor: '#10b981'
    }).then((result) => {
      if (result.isConfirmed && result.value) {
        // Rota unificada: certifique-se que no back-end a rota seja /finalizar/:id
        fetch(`/admin/finalizar/${id}`, { 
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ resultado_final: result.value })
        })
        .then(res => res.text())
        .then(msg => {
          Swal.fire('Processado!', msg, 'success').then(() => location.reload());
        })
        .catch(err => Swal.fire('Erro', 'Falha na conex√£o', 'error'));
      }
    });
  }
</script>
</body>
</html>