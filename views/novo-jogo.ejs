<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Novo Jogo</title>

  <style>
    * { box-sizing: border-box; }

    body {
      margin: 0;
      min-height: 100vh;
      font-family: Arial, Helvetica, sans-serif;
      background: linear-gradient(135deg, #020617, #0f172a);
      color: #e5e7eb;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 30px;
    }

    .card {
      width: 100%;
      max-width: 600px;
      background: rgba(2,6,23,0.9);
      border-radius: 18px;
      padding: 30px;
      box-shadow: 0 25px 50px rgba(0,0,0,0.6);
      border: 1px solid rgba(148,163,184,0.1);
    }

    h2 {
      margin-top: 0;
      margin-bottom: 25px;
      text-align: center;
      font-size: 26px;
      font-weight: 700;
    }

    label {
      display: block;
      margin-bottom: 6px;
      font-size: 14px;
      color: #94a3b8;
    }

    input, select {
      width: 100%;
      padding: 12px 14px;
      border-radius: 10px;
      border: 1px solid #1e293b;
      background: #020617;
      color: #e5e7eb;
      font-size: 14px;
      outline: none;
      transition: border 0.2s, box-shadow 0.2s;
    }

    input:focus, select:focus {
      border-color: #22c55e;
      box-shadow: 0 0 0 2px rgba(34,197,94,0.2);
    }

    .field {
      margin-bottom: 18px;
    }

    .odds {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 12px;
    }

    button {
      width: 100%;
      margin-top: 25px;
      padding: 14px;
      font-size: 15px;
      font-weight: bold;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      background: linear-gradient(135deg, #22c55e, #16a34a);
      color: #022c22;
      box-shadow: 0 10px 25px rgba(34,197,94,0.35);
      transition: all 0.25s ease;
    }

    button:hover {
      transform: translateY(-2px);
      box-shadow: 0 15px 35px rgba(34,197,94,0.55);
    }

    button:disabled {
      cursor: not-allowed;
    }

    .back {
      display: block;
      margin-top: 18px;
      text-align: center;
      text-decoration: none;
      color: #94a3b8;
      font-size: 14px;
    }

    .back:hover {
      color: #e5e7eb;
    }

    /* Overlay de loading */
    .loading-overlay {
      position: fixed;
      inset: 0;
      background: radial-gradient(circle at center, #020617, #000);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.6s ease;
    }

    .loading-overlay.active {
      opacity: 1;
      pointer-events: all;
    }

    /* Spinner mais lento */
    .spinner {
      width: 70px;
      height: 70px;
      border: 6px solid rgba(148,163,184,0.2);
      border-top: 6px solid #22c55e;
      border-radius: 50%;
      animation: spin 6s linear infinite;
    }

    .loading-text {
      margin-top: 18px;
      font-size: 15px;
      color: #94a3b8;
      letter-spacing: 1px;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>

<body>

  <div class="card">
    <h2>➕ Cadastrar Novo Jogo</h2>

    <form action="/admin/novo-jogo" method="POST" onsubmit="return mostrarLoading()">


      <div class="field">
        <label>Categoria</label>
        <select name="id_categoria" required>
          <option value="">Selecione uma categoria</option>
          <% if (categorias && categorias.length > 0) { %>
            <% categorias.forEach(cat => { %>
              <option value="<%= cat.id %>"><%= cat.nome %></option>
            <% }) %>
          <% } else { %>
            <option disabled>Nenhuma categoria encontrada</option>
          <% } %>
        </select>
      </div>

      <div class="field">
        <label>Time da Casa</label>
        <input type="text" name="time_casa" required>
      </div>

      <div class="field">
        <label>Time de Fora</label>
        <input type="text" name="time_fora" required>
      </div>

      <div class="field">
        <label>Data do Jogo</label>
        <input type="datetime-local" name="data_jogo" required>
      </div>

      <div class="field odds">
        <div>
          <label>Odd Casa</label>
          <input type="number" step="0.01" name="odd_casa" required>
        </div>

        <div>
          <label>Odd Empate</label>
          <input type="number" step="0.01" name="odd_empate" required>
        </div>

        <div>
          <label>Odd Fora</label>
          <input type="number" step="0.01" name="odd_fora" required>
        </div>
      </div>

      <button type="submit" id="btnCadastrar">Cadastrar Jogo</button>

      <a href="/admin" class="back">← Voltar para o painel</a>
    </form>
  </div>

  <div class="loading-overlay" id="loading">
    <div style="text-align:center">
      <div class="spinner"></div>
      <div class="loading-text">Salvando jogo...</div>
    </div>
  </div>

  <script>
  function mostrarLoading() {
    const loading = document.getElementById('loading');
    const btn = document.getElementById('btnCadastrar');

    loading.classList.add('active');
    btn.innerText = 'Salvando...';
    btn.disabled = true;
    btn.style.opacity = '0.7';

    // ⏳ tempo mínimo da animação (3 segundos)
    setTimeout(() => {
      document.forms[0].submit();
    }, 3000);

    return false; // impede envio imediato
  }
</script>


</body>
</html>
