<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Novo Jogo</title>
</head>
<body>

<h2>Cadastrar Novo Jogo</h2>

<form action="/admin/jogos/novo" method="POST">

  <label>Categoria</label>
<select name="id_categoria" required>
  <option value="">Selecione uma categoria</option>
  <% if (categorias && categorias.length > 0) { %>
    <% categorias.forEach(cat => { %>
      <option value="<%= cat.id %>"><%= cat.nome %></option>
    <% }) %>
  <% } else { %>
    <option disabled>Nenhuma categoria encontrada no banco</option>
  <% } %>
</select>

  <br><br>

  <label>Time da Casa</label>
  <input type="text" name="time_casa" required>

  <br><br>

  <label>Time de Fora</label>
  <input type="text" name="time_fora" required>

  <br><br>

  <label>Data do Jogo</label>
  <input type="datetime-local" name="data_jogo" required>

  <br><br>

  <label>Odd Casa</label>
  <input type="number" step="0.01" name="odd_casa" required>

  <label>Odd Empate</label>
  <input type="number" step="0.01" name="odd_empate" required>

  <label>Odd Fora</label>
  <input type="number" step="0.01" name="odd_fora" required>

  <br><br>

  <button type="submit">Cadastrar Jogo</button>

</form>

</body>
</html>
